---
interface CompressorCardProps {
	title: string;
	description: string;
	image: string;
	imageAlt: string;
	pdfUrl?: string;
	disabled?: boolean;
}

const {
	title,
	description,
	image,
	imageAlt,
	pdfUrl,
	disabled = false
} = Astro.props;
---

<div class="group bg-white rounded-2xl overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl relative border border-gray-200 hover:border-red-500/30">
	<div class="absolute inset-0 bg-gradient-to-br from-red-500/5 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
	<div class="relative p-8 flex items-center justify-center bg-gradient-to-b from-gray-50 to-white min-h-[280px]">
		<img
			src={image}
			alt={imageAlt}
			class="max-w-full max-h-[260px] object-contain transition-transform duration-500 group-hover:scale-110"
		/>
	</div>
	<div class="relative p-8 space-y-6">
		<div>
			<h3 class="text-xl font-bold text-slate-700 text-center mb-3">{title}</h3>
			<p class="text-gray-600 text-sm leading-relaxed text-center">{description}</p>
		</div>
		{disabled ? (
			<button
				disabled
				class="flex items-center justify-center gap-2 w-full px-6 py-4 border-2 border-gray-200 text-gray-400 font-semibold rounded-xl cursor-not-allowed"
			>
				<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
					<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zm-1 2l5 5h-5V4zM9 12l1.5 1.5L13 11v5h2v-5l2.5 2.5L18 12l-4.5-4.5L9 12z"/>
				</svg>
				Ver PDF
			</button>
		) : pdfUrl ? (
			<a
				href={pdfUrl}
				target="_blank"
				class="flex items-center justify-center gap-2 w-full px-6 py-4 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white font-semibold rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl shadow-red-500/25"
			>
				<svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
					<path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8l-6-6zm-1 2l5 5h-5V4zM9 12l1.5 1.5L13 11v5h2v-5l2.5 2.5L18 12l-4.5-4.5L9 12z"/>
				</svg>
				Ver PDF
			</a>
		) : null}
	</div>
</div>
