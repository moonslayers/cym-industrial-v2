---

<nav class="fixed top-0 left-0 w-full bg-slate-700 py-4 z-50 shadow-lg">
	<div class="max-w-6xl mx-auto flex justify-between items-center px-8 md:flex-row md:gap-0 flex-col gap-4">
		<div class="nav-logo">
			<h2 class="text-white text-2xl font-bold m-0">LOGO</h2>
		</div>
		<ul class="flex list-none m-0 p-0 gap-8 md:flex-row flex-col md:items-center items-center md:justify-start justify-center flex-wrap">
			<li class="m-0">
				<a href="#inicio" class="text-white text-base font-medium px-4 py-2 rounded-md transition-all duration-300 hover:bg-slate-600 hover:text-blue-400 no-underline md:text-sm">INICIO</a>
			</li>
			<li class="m-0">
				<a href="#productos" class="text-white text-base font-medium px-4 py-2 rounded-md transition-all duration-300 hover:bg-slate-600 hover:text-blue-400 no-underline md:text-sm">PRODUCTOS</a>
			</li>
			<li class="m-0">
				<a href="#servicios" class="text-white text-base font-medium px-4 py-2 rounded-md transition-all duration-300 hover:bg-slate-600 hover:text-blue-400 no-underline md:text-sm">SERVICIOS</a>
			</li>
			<li class="m-0">
				<a href="#nosotros" class="text-white text-base font-medium px-4 py-2 rounded-md transition-all duration-300 hover:bg-slate-600 hover:text-blue-400 no-underline md:text-sm">NOSOTROS</a>
			</li>
			<li class="m-0">
				<a href="#contacto" class="text-white text-base font-medium px-4 py-2 rounded-md transition-all duration-300 hover:bg-slate-600 hover:text-blue-400 no-underline md:text-sm">CONTACTO</a>
			</li>
		</ul>
	</div>
</nav>

<script>
	// JavaScript para scroll suave
	document.addEventListener('DOMContentLoaded', () => {
		const links = document.querySelectorAll('a[href^="#"]');

		links.forEach(link => {
			link.addEventListener('click', (e) => {
				e.preventDefault();

				const targetId = link.getAttribute('href');
				const targetElement = document.querySelector(targetId);

				if (targetElement) {
					const offset = 80; // Altura del navbar
					const targetPosition = targetElement.offsetTop - offset;

					window.scrollTo({
						top: targetPosition,
						behavior: 'smooth'
					});
				}
			});
		});
	});
</script>