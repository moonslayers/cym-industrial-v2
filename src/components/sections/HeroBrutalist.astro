---
const whatsappUrl = "https://api.whatsapp.com/send?phone=526643108937&text=Quiero%20informacion%20de%20sus%20productos%20y%20servicios";
const heroImage = "/compresor_hero.png";
---

<section class="hero-brutalist min-h-screen relative overflow-hidden bg-neutral-950 font-space">
  <!-- Background Grid -->
  <div class="absolute inset-0 grid-pattern opacity-20"></div>
  
  <!-- Noise Texture -->
  <div class="absolute inset-0 noise-overlay"></div>
  
  <!-- Diagonal Accent Line -->
  <div class="absolute top-0 right-0 w-2/3 h-full bg-gradient-to-bl from-red-900/30 to-transparent transform -skew-x-12 origin-top-right"></div>
  
  <div class="relative z-10 container mx-auto px-4 min-h-screen flex items-center">
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 items-center w-full pt-20 pb-16">
      
      <!-- Content Side - Offset -->
      <div class="order-2 lg:order-1 lg:ml-8 transform lg:-translate-x-4">
        
        <!-- Technical Border Box -->
        <div class="relative border-4 border-neutral-800 p-8 lg:p-12 bg-neutral-950/80 backdrop-blur-sm hover:border-red-700 transition-all duration-300 transform hover:-translate-x-2 hover:scale-[1.02]">
          
          <!-- Corner Decorations -->
          <div class="absolute -top-2 -left-2 w-8 h-8 bg-red-600"></div>
          <div class="absolute -bottom-2 -right-2 w-8 h-8 bg-red-600"></div>
          
          <!-- Badge -->
          <div class="inline-flex items-center gap-2 bg-red-600 text-white px-4 py-2 text-sm font-bold uppercase tracking-widest mb-6 transform hover:rotate-1 transition-transform">
            <span class="w-2 h-2 bg-amber-400 rounded-full animate-pulse"></span>
            Soluciones Industriales
          </div>
          
          <!-- Main Title -->
          <h1 class="font-black text-white text-5xl sm:text-6xl lg:text-7xl xl:text-8xl tracking-tighter leading-none mb-2 uppercase">
            <span class="reveal-text block transform translate-y-full opacity-0">CYM</span>
            <span class="reveal-text block text-red-600 transform translate-y-full opacity-0" style="animation-delay: 0.1s">Industrial</span>
          </h1>
          
          <!-- Subtitle -->
          <h2 class="reveal-text font-bold text-4xl sm:text-5xl lg:text-6xl text-amber-400 tracking-tight leading-tight mb-6 transform translate-y-full opacity-0" style="animation-delay: 0.2s">
            COMPRESORES<br>DE AIRE
          </h2>
          
          <!-- Description -->
          <p class="reveal-text text-neutral-300 text-lg lg:text-xl font-medium max-w-xl mb-8 leading-relaxed transform translate-y-full opacity-0" style="animation-delay: 0.3s">
            Venta de compresores de aire industriales y servicio de mantenimiento y renta de máquinas
          </p>
          
          <!-- Technical Specs Lines -->
          <div class="reveal-text flex gap-4 mb-8 border-t-2 border-neutral-700 pt-6 transform translate-y-full opacity-0" style="animation-delay: 0.4s">
            <div class="text-center">
              <div class="text-2xl font-black text-white">24/7</div>
              <div class="text-xs text-neutral-500 uppercase tracking-widest">Servicio</div>
            </div>
            <div class="w-px bg-neutral-700"></div>
            <div class="text-center">
              <div class="text-2xl font-black text-white">100%</div>
              <div class="text-xs text-neutral-500 uppercase tracking-widest">Garantía</div>
            </div>
            <div class="w-px bg-neutral-700"></div>
            <div class="text-center">
              <div class="text-2xl font-black text-white">+15</div>
              <div class="text-xs text-neutral-500 uppercase tracking-widest">Años</div>
            </div>
          </div>
          
          <!-- CTA Button -->
          <a 
            href={whatsappUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="reveal-text cta-button inline-flex items-center gap-4 bg-emerald-500 text-white px-8 py-5 text-lg font-bold uppercase tracking-widest border-4 border-transparent hover:border-emerald-400 hover:bg-emerald-600 hover:shadow-[8px_8px_0px_0px_rgba(16,185,129,0.8)] hover:-translate-x-1 hover:-translate-y-1 transition-all duration-200 transform translate-y-full opacity-0"
            style="animation-delay: 0.5s"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            Contactar por WhatsApp
          </a>
        </div>
      </div>
      
      <!-- Image Side - Asymmetric -->
      <div class="order-1 lg:order-2 relative">
        <!-- Frame with offset -->
        <div class="relative transform lg:translate-x-8 rotate-1 hover:rotate-0 transition-transform duration-500">
          <!-- Main Image Container -->
          <div class="relative overflow-hidden border-4 border-red-700 bg-neutral-900">
            <img 
              src={heroImage} 
              alt="Compresor de Aire Industrial CYM" 
              class="w-full h-auto object-cover transform hover:scale-110 transition-transform duration-700 filter grayscale hover:grayscale-0"
            />
            
            <!-- Overlay Gradient -->
            <div class="absolute inset-0 bg-gradient-to-t from-red-900/60 via-transparent to-transparent"></div>
            
            <!-- Technical Overlay Lines -->
            <div class="absolute top-4 left-4 right-4 h-px bg-red-500"></div>
            <div class="absolute bottom-4 left-4 right-4 h-px bg-red-500"></div>
            <div class="absolute top-4 bottom-4 left-4 w-px bg-red-500"></div>
            <div class="absolute top-4 bottom-4 right-4 w-px bg-red-500"></div>
          </div>
          
          <!-- Offset Border Frame -->
          <div class="absolute -inset-4 border-2 border-neutral-600 transform translate-x-4 translate-y-4 -z-10"></div>
          
          <!-- Decorative Elements -->
          <div class="absolute -top-8 -right-8 w-24 h-24 border-4 border-amber-400 opacity-80 transform rotate-45"></div>
          <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-red-600 opacity-60"></div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Technical Line -->
  <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-red-600 via-red-500 to-amber-400"></div>
  
  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20">
    <div class="flex flex-col items-center gap-2 text-neutral-500">
      <span class="text-xs uppercase tracking-widest font-bold">Scroll</span>
      <div class="w-px h-12 bg-gradient-to-b from-red-500 to-transparent animate-pulse"></div>
    </div>
  </div>
</section>

<style>
  @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&display=swap');
  
  .font-space {
    font-family: 'Space Grotesk', sans-serif;
  }
  
  /* Grid Pattern */
  .grid-pattern {
    background-image: 
      linear-gradient(to right, #333 1px, transparent 1px),
      linear-gradient(to bottom, #333 1px, transparent 1px);
    background-size: 50px 50px;
  }
  
  /* Noise Overlay */
  .noise-overlay {
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noiseFilter'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.9' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noiseFilter)'/%3E%3C/svg%3E");
    opacity: 0.03;
  }
  
  /* Reveal Animation */
  @keyframes reveal {
    0% {
      transform: translateY(100%);
      opacity: 0;
    }
    100% {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  .reveal-text {
    animation: reveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  
  /* Staggered animation delays */
  .reveal-text:nth-child(1) { animation-delay: 0.1s; }
  .reveal-text:nth-child(2) { animation-delay: 0.2s; }
  .reveal-text:nth-child(3) { animation-delay: 0.3s; }
  .reveal-text:nth-child(4) { animation-delay: 0.4s; }
  .reveal-text:nth-child(5) { animation-delay: 0.5s; }
  
  /* CTA Button specific animation */
  .cta-button {
    animation: reveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) forwards;
  }
  
  /* Hover Effects */
  .cta-button:hover {
    animation: none;
  }
  
  /* Image hover effect */
  .hero-brutalist img {
    transition: all 0.7s cubic-bezier(0.16, 1, 0.3, 1);
  }
  
  /* Border box hover */
  .hero-brutalist .border-4:hover {
    box-shadow: 0 0 0 4px rgba(185, 28, 28, 0.3);
  }
</style>
