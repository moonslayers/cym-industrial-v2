---
const products = [
  {
    id: 1,
    title: "Compresores de Tornillo",
    description: "Manejas equipos de aire comprimido por la marca Chicago Pneumatic en velocidad fija y variable. Equipos de alta eficiencia y confiabilidad para aplicaciones industriales.",
    image: "/producto_1_compresor.jpg",
    ctaText: "Solicitar Información",
    ctaLink: "https://api.whatsapp.com/send?phone=526643108937&text=Quiero%20informacion%20sobre%20compresores%20de%20tornillo%20Chicago%20Pneumatic"
  },
  {
    id: 2,
    title: "Mantenimiento y Servicio",
    description: "Brindamos mantenimiento preventivo y correctivo a equipos de aire comprimido, así como estudios de sistema para garantizar el buen funcionamiento y eficiencia energética.",
    image: "/producto_2_mantenimiento_servicio.jpg",
    ctaText: "Agendar Mantenimiento",
    ctaLink: "https://api.whatsapp.com/send?phone=526643108937&text=Quiero%20agendar%20un%20mantenimiento%20para%20mi%20equipo%20de%20aire%20comprimido"
  },
  {
    id: 3,
    title: "Equipo Usado",
    description: "Manejamos equipo usado de aire comprimido en excelente condiciones, completamente revisado y certificado. Oportunidad para obtener equipos de calidad a precio competitivo.",
    image: "/producto_3_equipo_usado.jpg",
    ctaText: "Ver Equipo Disponible",
    ctaLink: "https://api.whatsapp.com/send?phone=526643108937&text=Quiero%20informacion%20sobre%20equipo%20usado%20de%20aire%20comprimido"
  }
];
---

<section id="productos" class="relative min-h-screen py-20 bg-gradient-to-b from-gray-950 via-gray-900 to-gray-950 overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-red-900/20 rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-amber-500/10 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] border border-red-500/5 rounded-full"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white mb-6 tracking-tight">
        PRODUCTOS
      </h2>
      <p class="text-xl text-gray-400 max-w-3xl mx-auto leading-relaxed">
        Soluciones integrales para sistemas de aire comprimido
      </p>
    </div>

    <!-- Tab Navigation -->
    <div class="flex flex-wrap justify-center gap-4 mb-12">
      {products.map((product, index) => (
        <button
          data-tab-index={index}
          class="tab-btn group relative px-8 py-4 rounded-xl font-semibold text-lg transition-all duration-300
            bg-gray-800/50 border-2 border-gray-700/50 hover:border-red-500/50 hover:bg-gray-800
            data-[active=true]:bg-red-900/30 data-[active=true]:border-red-500 data-[active=true]:text-white
            data-[active=true]:shadow-[0_0_30px_rgba(239,68,68,0.3)]"
        >
          <span class="relative z-10 text-gray-300 group-hover:text-white transition-colors duration-300 data-[active=true]:text-white">
            {product.title}
          </span>
          <div class="absolute inset-0 bg-gradient-to-r from-red-500/0 via-red-500/10 to-red-500/0 opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-xl"></div>
        </button>
      ))}
    </div>

    <!-- Carousel Display -->
    <div class="relative max-w-6xl mx-auto">
      <!-- Navigation Arrows -->
      <button
        id="prevBtn"
        class="nav-btn absolute left-4 md:-left-16 top-1/2 -translate-y-1/2 z-20 w-14 h-14 rounded-full bg-gray-800/80 backdrop-blur-sm border border-gray-700/50 hover:border-red-500 hover:bg-red-900/30 transition-all duration-300 flex items-center justify-center group hover:scale-110 shadow-lg"
        aria-label="Producto anterior"
      >
        <svg class="w-6 h-6 text-gray-400 group-hover:text-red-400 transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
        </svg>
      </button>

      <button
        id="nextBtn"
        class="nav-btn absolute right-4 md:-right-16 top-1/2 -translate-y-1/2 z-20 w-14 h-14 rounded-full bg-gray-800/80 backdrop-blur-sm border border-gray-700/50 hover:border-red-500 hover:bg-red-900/30 transition-all duration-300 flex items-center justify-center group hover:scale-110 shadow-lg"
        aria-label="Producto siguiente"
      >
        <svg class="w-6 h-6 text-gray-400 group-hover:text-red-400 transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
        </svg>
      </button>

      <!-- Products Container -->
      <div class="relative min-h-[500px] md:min-h-[600px] lg:min-h-[700px] perspective-1000">
        {products.map((product, index) => (
          <div
            data-product-index={index}
            class="product-card absolute inset-0 transition-all duration-700 ease-out
              opacity-0 translate-y-8 scale-95
              data-[active=true]:opacity-100 data-[active=true]:translate-y-0 data-[active=true]:scale-100"
          >
            <!-- Glow effect behind active card -->
            <div class="absolute inset-0 bg-gradient-to-r from-red-500/10 to-amber-500/10 rounded-3xl blur-2xl opacity-0 data-[active=true]:opacity-100 transition-opacity duration-700"></div>

            <!-- Product Card Content -->
            <div class="relative h-full bg-gray-900/60 backdrop-blur-xl border border-gray-700/50 rounded-3xl overflow-hidden shadow-2xl data-[active=true]:border-red-500/20 transition-colors duration-700">
              <div class="grid lg:grid-cols-2 h-full">
                <!-- Product Image -->
                <div class="relative h-64 md:h-80 lg:h-full overflow-hidden">
                  <div class="absolute inset-0 bg-gradient-to-br from-red-900/20 to-gray-900/40 z-10"></div>
                  <img
                    src={product.image}
                    alt={product.title}
                    class="w-full h-full object-cover transform transition-transform duration-700 group-hover:scale-105 data-[active=true]:scale-105"
                  />
                  <!-- Product badge -->
                  <div class="absolute top-6 left-6 z-20">
                    <span class="inline-block px-4 py-2 bg-red-900/80 backdrop-blur-sm border border-red-500/30 rounded-full text-red-300 text-sm font-semibold uppercase tracking-wide">
                      Producto {index + 1}
                    </span>
                  </div>
                </div>

                <!-- Product Info -->
                <div class="flex flex-col justify-center p-8 md:p-12 lg:p-16">
                  <div class="space-y-8">
                    <div>
                      <h3 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6 leading-tight">
                        {product.title}
                      </h3>
                      <p class="text-lg md:text-xl text-gray-300 leading-relaxed">
                        {product.description}
                      </p>
                    </div>

                    <!-- Features highlight -->
                    <div class="flex flex-wrap gap-3">
                      <span class="inline-flex items-center gap-2 px-4 py-2 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-400 text-sm">
                        <svg class="w-4 h-4 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Alta calidad
                      </span>
                      <span class="inline-flex items-center gap-2 px-4 py-2 bg-gray-800/50 border border-gray-700/50 rounded-lg text-gray-400 text-sm">
                        <svg class="w-4 h-4 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                        </svg>
                        Garantizada
                      </span>
                    </div>

                    <!-- CTA Button -->
                    <div class="pt-4">
                      <a
                        href={product.ctaLink}
                        target="_blank"
                        rel="noopener noreferrer"
                        class="inline-flex items-center gap-3 px-8 py-5 bg-gradient-to-r from-red-600 to-red-700 hover:from-red-700 hover:to-red-800 text-white font-bold text-lg rounded-xl transition-all duration-300 transform hover:scale-105 shadow-xl hover:shadow-2xl shadow-red-500/25 border border-red-500/30 group"
                      >
                        <svg class="w-7 h-7 group-hover:scale-110 transition-transform" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"></path>
                        </svg>
                        <span>{product.ctaText}</span>
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Dots Indicator -->
      <div class="flex justify-center items-center gap-3 mt-12">
        {products.map((_, index) => (
          <button
            data-dot-index={index}
            class="dot-btn w-3 h-3 rounded-full transition-all duration-300 bg-gray-600 hover:bg-gray-500
              data-[active=true]:w-12 data-[active=true]:bg-red-500 data-[active=true]:shadow-[0_0_12px_rgba(239,68,68,0.6)]"
            aria-label={`Ir al producto ${index + 1}`}
          ></button>
        ))}
      </div>

      <!-- Auto-play toggle -->
      <div class="flex justify-center mt-6">
        <button
          id="autoPlayToggle"
          class="flex items-center gap-2 px-4 py-2 text-sm text-gray-500 hover:text-red-400 transition-colors duration-300"
          aria-label="Alternar reproducción automática"
        >
          <svg id="playIcon" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span id="autoPlayText">Activar reproducción automática</span>
        </button>
      </div>
    </div>
  </div>
</section>

<script>
  const products = [
    { title: 'Compresores de Tornillo', description: 'Manejas equipos de aire comprimido por la marca Chicago Pneumatic en velocidad fija y variable. Equipos de alta eficiencia y confiabilidad para aplicaciones industriales.', image: '/producto_1_compresor.jpg', ctaText: 'Solicitar Información', ctaLink: 'https://api.whatsapp.com/send?phone=526643108937&text=Quiero%20informacion%20sobre%20compresores%20de%20tornillo%20Chicago%20Pneumatic' },
    { title: 'Mantenimiento y Servicio', description: 'Brindamos mantenimiento preventivo y correctivo a equipos de aire comprimido, así como estudios de sistema para garantizar el buen funcionamiento y eficiencia energética.', image: '/producto_2_mantenimiento_servicio.jpg', ctaText: 'Agendar Mantenimiento', ctaLink: 'https://api.whatsapp.com/send?phone=526643108937&text=Quiero%20agendar%20un%20mantenimiento%20para%20mi%20equipo%20de%20aire%20comprimido' },
    { title: 'Equipo Usado', description: 'Manejamos equipo usado de aire comprimido en excelente condiciones, completamente revisado y certificado. Oportunidad para obtener equipos de calidad a precio competitivo.', image: '/producto_3_equipo_usado.jpg', ctaText: 'Ver Equipo Disponible', ctaLink: 'https://api.whatsapp.com/send?phone=526643108937&text=Quiero%20informacion%20sobre%20equipo%20usado%20de%20aire%20comprimido' }
  ];

  let currentIndex = 0;
  let isAutoPlaying = false;
  let autoPlayInterval = null;
  let touchStartX = 0;
  let touchEndX = 0;

  const tabBtns = document.querySelectorAll('.tab-btn');
  const productCards = document.querySelectorAll('.product-card');
  const dotBtns = document.querySelectorAll('.dot-btn');
  const prevBtn = document.getElementById('prevBtn');
  const nextBtn = document.getElementById('nextBtn');
  const autoPlayToggle = document.getElementById('autoPlayToggle');
  const autoPlayText = document.getElementById('autoPlayText');
  const playIcon = document.getElementById('playIcon');

  function updateDisplay(index) {
    currentIndex = index;

    tabBtns.forEach((btn, i) => {
      btn.dataset.active = i === currentIndex;
    });

    productCards.forEach((card, i) => {
      card.dataset.active = i === currentIndex;
    });

    dotBtns.forEach((dot, i) => {
      dot.dataset.active = i === currentIndex;
    });
  }

  function nextProduct() {
    updateDisplay((currentIndex + 1) % products.length);
  }

  function prevProduct() {
    updateDisplay((currentIndex - 1 + products.length) % products.length);
  }

  function startAutoPlay() {
    isAutoPlaying = true;
    autoPlayInterval = setInterval(nextProduct, 5000);
    autoPlayText.textContent = 'Desactivar reproducción automática';
  }

  function stopAutoPlay() {
    isAutoPlaying = false;
    if (autoPlayInterval) {
      clearInterval(autoPlayInterval);
      autoPlayInterval = null;
    }
    autoPlayText.textContent = 'Activar reproducción automática';
  }

  function toggleAutoPlay() {
    if (isAutoPlaying) {
      stopAutoPlay();
    } else {
      startAutoPlay();
    }
  }

  tabBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      const index = parseInt(btn.dataset.tabIndex);
      updateDisplay(index);
      stopAutoPlay();
    });
  });

  dotBtns.forEach(dot => {
    dot.addEventListener('click', () => {
      const index = parseInt(dot.dataset.dotIndex);
      updateDisplay(index);
      stopAutoPlay();
    });
  });

  prevBtn.addEventListener('click', () => {
    prevProduct();
    stopAutoPlay();
  });

  nextBtn.addEventListener('click', () => {
    nextProduct();
    stopAutoPlay();
  });

  autoPlayToggle.addEventListener('click', toggleAutoPlay);

  document.addEventListener('keydown', (e) => {
    if (e.key === 'ArrowLeft') {
      prevProduct();
      stopAutoPlay();
    } else if (e.key === 'ArrowRight') {
      nextProduct();
      stopAutoPlay();
    }
  });

  const carouselContainer = document.querySelector('.perspective-1000')?.parentElement;

  carouselContainer?.addEventListener('touchstart', (e) => {
    touchStartX = e.changedTouches[0].screenX;
  }, { passive: true });

  carouselContainer?.addEventListener('touchend', (e) => {
    touchEndX = e.changedTouches[0].screenX;
    handleSwipe();
  }, { passive: true });

  function handleSwipe() {
    const swipeThreshold = 50;
    const diff = touchStartX - touchEndX;

    if (Math.abs(diff) > swipeThreshold) {
      if (diff > 0) {
        nextProduct();
      } else {
        prevProduct();
      }
      stopAutoPlay();
    }
  }

  updateDisplay(0);
</script>

<style>
  .perspective-1000 {
    perspective: 1000px;
  }
</style>
